{% for post in posts %}
<div class="account-post">
	<div class="account-post-head">{{ post.title }}</div>
	<div class="account-post-body">
		{{ post.preview }}
	</div>
	<div class="account-post-status">
		<div class="btn-group" role="group" aria-label="...">
			<button type="button" class="btn btn-default" aria-label="Left Align" id="{{ post.id }}">
				<span class="glyphicon glyphicon-book" aria-hidden="true"></span>Читать далее
			</button>
			<button type="button" class="btn btn-default" aria-label="Left Align" id="{{ post.id }}">
				<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			</button>
			<button type="button" class="btn btn-default" aria-label="Left Align" disabled>
				<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>{{ post.views }}
			</button>
		</div>
	</div>
</div>
{% endfor %}